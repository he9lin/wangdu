%html{ 'xmlns:og' => "http://ogp.me/ns#",  'xmlns' => "http://www.w3.org/1999/xhtml",  'xmlns:xn' => "http://www.renren.com/2009/xnml", 'lang' => 'zh', 'xml:lang' => 'zh' }
  %head
    %meta{ 'charset' => 'utf-8' }
    %meta{ 'http-equiv' => "Content-Type", 'content' => "text/html; charset=UTF-8" }
    %link{ :href => "/images/favicon.ico", :rel=> "shortcut icon"}
    %title 成都万都航空
    = stylesheet_link_tag 'jquery-ui-1.8.13.custom'
    = stylesheet_link_tag 'screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'ie.css', :media => 'screen, projection'
    
    = javascript_include_tag 'jquery-1.5.1.min', 'jquery-ui-1.8.13.custom.min', 'rails', 'application', 'jquery.ui.datepicker-zh-CN'
    ~ yield :head
    ~ csrf_meta_tag
  %body.home
    #container
      = render 'shared/header'
      #sidebar
        = yield :side
      #content
        = yield
      = render 'shared/footer'