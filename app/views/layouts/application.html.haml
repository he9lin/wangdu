      = stylesheet_link_tag 'ie.css', :media => 'screen, projection'
      
    = javascript_include_tag 'jquery-1.5.1.min', 'jquery-ui-1.8.13.custom.min', 'rails', 'application', 'jquery.ui.datepicker-zh-CN', 'slides.min.jquery.js'
    
    ~ yield :head
    ~ csrf_meta_tag
  %body.home
    #top.fixed
    #container
      = render 'shared/header'
      #main
        #content
          = yield
        = render 'shared/sider'
      = render 'shared/footer'