%html{ 'xmlns:og' => "http://ogp.me/ns#",  'xmlns' => "http://www.w3.org/1999/xhtml",  'xmlns:xn' => "http://www.renren.com/2009/xnml", 'lang' => 'zh', 'xml:lang' => 'zh' }
  %head
    %meta{ 'charset' => 'utf-8' }
    %meta{ 'http-equiv' => "Content-Type", 'content' => "text/html; charset=UTF-8" }
    %link{ :href => "/images/favicon.ico", :rel=> "shortcut icon"}
    %title 成都万都航空
   
    = stylesheet_link_tag 'start/jquery-ui-1.8.13.custom'
    = stylesheet_link_tag 'screen.css', :media => 'screen, projection'
